<div id="home-page" class="page" ng-if="option.type == 'A2'">
    <!--插入视频-->
    <div style="height: 100%;width: 100%;position: absolute;z-index: 1;">
        <video ng-if="option.videoUrl" id="my-video" style="object-fit: fill" width="100%" height="100%" class="video" loop="" muted="" autoplay="" preload="auto" poster="" webkit-playsinline="">
            <source embed-src="{{option.videoUrl}}" src="video/720.mp4" type='video/mp4' />
        </video>
    </div>
    <div class="video-bg">
        <div class="video-content">
            <p>{{option.videoMainTitle}}</p>
            <p>{{option.videoSubTitle}}</p>
            <a ng-click="jumpToPosition();" class="mc-bgc" href="javascript:void(0);">{{option.videoButtonText}}</a>
        </div>
    </div>

    <div class="collectivize-main" ng-hide="option.data == '' || option.data == undefined">
        <div class="swiper-button-next collectivize-next"></div>
        <div class="swiper-button-prev collectivize-prev"></div>

        <div class="swiper-container swiper-container-2">

            <div class="swiper-wrapper">
                <div class="swiper-slide collectivize-main-li" ng-repeat="t in option.data" creat-group-swiper>
                    <img ng-src="{{t.imgUrl}}" alt=""/>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="home-page" class="page" ng-if="option.type == 'A1'">
    <div class="swiper-container swiper-container-1" style="height: 100%">
        <div class="swiper-wrapper">
            <div class="swiper-slide" ng-repeat="u in option.bannerImgs track by $index" creat-swiper></div>
        </div>
    </div>

    <div ng-show="option.data == '' || option.data == undefined" class="home-page-bottom" swiper-style>
        <div class="home-page-bottom-l">
            <div class="button-prev"><span class="iconfont icon-zuo mc-c"></span></div>
            <div class="swiper-pagination swiper-pagination-white"></div>
            <div class="button-next"><span class="iconfont icon-you mc-c"></span></div>
        </div>
        <div class="home-page-bottom-m">
            <div class="shubiao"></div>
            <div class="zhixian"></div>
            <div class="sanjiaoxing">&lt;</div>
        </div>
        <div class="home-page-bottom-r">
            <div class="weixin-code">
                <img ng-src="{{wechatQRUrl}}" alt=""/>
            </div>
            <div class="weixin-icon">
                <span class="iconfont icon-weixin mc-c"></span>
            </div>
        </div>
    </div>


    <!--集团化-->
    <div ng-hide="option.data == '' || option.data == undefined" class="collectivize-main">
        <div class="swiper-button-next collectivize-next"><span class="iconfont icon-dayuhao mc-c"></span></div>
        <div class="swiper-button-prev collectivize-prev"><span class="iconfont icon-xiaoyuhao mc-c"></span></div>

        <div class="swiper-container swiper-container-2 mc-bc">
            <div class="swiper-wrapper">
                <div class="swiper-slide collectivize-main-li mc-bc" ng-repeat="t in option.data" creat-group-swiper>
                    <a href="javascript: void(0);" ng-click="jumpUrl(t.url);" style="width: 100%;height: 100%;display: block;align-items: center;justify-content: center;" toggle-show>
                    	<img ng-src="{{t.imgUrl}}" alt=""/>
                    	<span ng-if="t.content" class="mc-bgc">{{t.content | textLengthSet:true:12:true}}</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>